<!-- aboutMe.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>About Me</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f9f9f9;
      margin: 0;
      padding: 20px;
    }
    .container {
      width: 80%;
      margin: 0 auto;
    }
    h1 {
      text-align: center;
      margin-bottom: 20px;
      color: #333;
    }
    p {
      font-size: 16px;
      line-height: 1.6;
      color: #555;
    }
    .home-link {
      display: block;
      text-align: center;
      margin-top: 20px;
    }
    .home-link button {
      padding: 10px 20px;
      background-color: #007bff;
      color: #fff;
      border: none;
      border-radius: 4px;
      font-size: 16px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }
    .home-link button:hover {
      background-color: #0056b3;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>About Me</h1>
    <div class="content">
      <p>
        Hi there! I'm <%= username ? username : 'a Guest' %>, a passionate Developer.. This is my space to share my thoughts and experiences with you.
      </p>
    </div>
    <a href="/" class="home-link">
      <button>Go to Home</button>
    </a>
  </div>
</body>
</html>
